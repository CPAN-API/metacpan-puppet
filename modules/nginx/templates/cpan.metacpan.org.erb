# sample nginx server for search.metacpan.org

server {

    listen 80;
    listen 443;
    server_name  .cpan.metacpan.org;

    access_log  /home/metacpan/logs/cpan.metacpan.org/access.log;
    error_log   /home/metacpan/logs/cpan.metacpan.org/error.log;

    root  /home/metacpan/CPAN;

    location / {
        index  index.html;
	autoindex on;
    }

    gzip               on;
    gzip_proxied       any;
    gzip_http_version  1.0;
    gzip_vary          on;
    gzip_buffers       16 8k;
    gzip_types         text/plain text/css text/javascript image/x-icon image/bmp application/xml;
    gzip_disable       "MSIE [1-6]\.";
}
